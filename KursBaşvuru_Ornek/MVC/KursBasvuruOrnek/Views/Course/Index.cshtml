@model IEnumerable<Candidate>


        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Course</th>
                    <th>Date</th>
                </tr>
                @if (Model.Count() > 0)
                {
                    @foreach (var i in Model)
                    {
                                <tr>

                                    <td>@Model.Count()</td>
                                    <td>@i.FirstName</td>
                                    <td>@i.LastName</td>
                                    <td>@i.SelectedCourse</td>
                                    <td>@i.ApplyAt</td>
                                </tr>
                        
                    }
                }
            </thead>
        </table>
        @if(Model.Count()==0)
        {
            <h3>Herhangi Bir Başvuru Yapılmamıştır.</h3>
        }
        <div class="text-center">

            <a class="btn btn-primary " href="/Course/Apply">Başvuru Yap </a>
        </div>